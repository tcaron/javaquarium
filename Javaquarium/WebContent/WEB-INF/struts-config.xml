<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config 
PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

<!-- on va lié le nom loginForm au bean LoginVO -->
<form-beans type="org.apache.struts.action.ActionFormBean">
	<form-bean name="loginForm" type="com.javaquarium.beans.web.LoginVO" />
	<form-bean name="poissonForm" type="com.javaquarium.beans.web.PoissonVO" />
</form-beans>

<action-mappings>
	
	<!-- url /listerEspece.do, lié à ListerEspeceAction.java, si success est retourné on va sur la page UC01_especes.jsp -->
	<action path="/listerEspece" type="org.springframework.web.struts.DelegatingActionProxy">
		<forward name="success" path="/jsp/UC01_especes.jsp"/> 
	</action>
	
	<!-- path /pagelogin lié au form de la jsp UC00_login qui a l'action à "/pageLogin" , de portée type requête, nom loginForm qui sera lié à un bean au dessus, lié à LoginAction.java -->
	<action path="/pageLogin"  input="/jsp/UC00_login.jsp" scope="request" name="loginForm" type="org.springframework.web.struts.DelegatingActionProxy">
		<forward name="success" path="/listerEspece.do" redirect="true"/>
		<forward name="failure" path="/jsp/UC00_login.jsp" redirect="true" />
	</action>

	<!--  path /ajouterNouveauPoisson lié au formulaire de la jsp UC02_ajout -->
	<action path="/ajouterNouveauPoisson" input="/jsp/UC02_ajout.jsp" scope="request" name="poissonForm" type="org.springframework.web.struts.DelegatingActionProxy">
		<forward name="success" path="listerEspece.do" redirect="true" />
		<forward name="failure" path="/jsp/UC02_ajout.jsp" redirect="true" />
	</action>
	
		<!--Remove poisson -->
	<action path="/removeEspece" type="org.springframework.web.struts.DelegatingActionProxy">
		<forward name="success" path="listerEspece.do" redirect="true"/> 
	</action>
</action-mappings>
<message-resources parameter="ApplicationResources"/>

 <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
       <set-property property="contextConfigLocation" value="/WEB-INF/applicationContext.xml"/>
   </plug-in>

</struts-config>
